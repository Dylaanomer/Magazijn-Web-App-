

<link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">


@model IQueryable<MagazijnPartij>
@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Pvan).Titled("Name");
        columns.Add(model => model.Ptot).Titled("Surname");
        columns.Add(model => model.PHerk).Titled("Marital status");

        columns.Add(model => model.Naam).Titled("Age");
        columns.Add(model => model.VpNaam).Titled("Birthday").Formatted("{0:d}");
        columns.Add(model => model.Uitserie).Titled("Employed");
    })
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
)+


<script src="~/js/mvc-grid/mvc-grid.js"></script>


<script>
    document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
</script>